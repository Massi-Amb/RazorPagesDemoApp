@page "{id=Guid}"
@model RazorPagesDemoApp.Pages.Actors.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">

<h1 class="mb-3">Edit Actor</h1>

   @if (!string.IsNullOrWhiteSpace(message))
   {
        <div class="alert alert-success" role="alert">
            @message
        </div>
   }


<div class="mb-3">
    <label class="form-label">ActorId</label>
    <input type="text" class="form-control" asp-for="EditActorViewModel.ActorId" readonly/>
</div>

<div class="mb-3">
    <label class="form-label">FullName</label>
    <input type="text" class="form-control" asp-for="EditActorViewModel.FullName"  />
</div>

<div class="mb-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="EditActorViewModel.Email" />
</div>

<div class="mb-3">
    <label class="form-label">Awards</label>
    <input type="text" class="form-control" asp-for="EditActorViewModel.Awards" />
</div>

<div class="mb-3">
    <label class="form-label">DateOfBirth</label>
    <input type="date" class="form-control" asp-for="EditActorViewModel.DateOfBirth" />
</div>

<div class="mb-3">
    <label class="form-label">Movies</label>
    <input type="text" class="form-control" asp-for="EditActorViewModel.Movies" />
</div>

<div class="mb-3 d-flex justify-content-between">
    <button type="submit" class="btn btn-primary"asp-page-handler="Update">Update</button>

    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
</div>

</form>
